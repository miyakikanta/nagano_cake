 <div class="container">
  <div class="row">
   <div class=" mx-auto">

<h2>配送先登録/一覧</h2>
<%= form_with model: @address,url: public_addresses_path do |f| %>

  <%= f.label :郵便番号 %>
  <em>(ハイフンなし)
  <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></br>

  <%= f.label :住所 %>
  <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区◯◯町0-0" %></br>

  <%= f.label :宛名 %>
  <%= f.text_field :name, autofocus: true, placeholder: "山田花子" %></br>

<%= f.submit "新規登録", class: 'btn btn-success' %>

<% end %></br>

<table class="table">
<tr>
<th>郵便番号</th>
<th>住所</th>
<th>宛名</th>
<th></th>
<th></th>
</tr>
 

<% @addresses.each do |address| %></br>
 <tr>
 <th><%= address.postal_code %></th>
 
 <th><%= address.address %></th> 

 <th><%= address.name %></th>
 
 <th><%= link_to "編集する",edit_public_address_path(address), class: 'btn btn-success' %></th>
 <th><%= link_to "削除する",public_address_path(address), method: :delete, class: 'btn btn-danger
 ' %></th>
 </tr>
　
 <% end %>
   </table>
  </div>
 </div> 
</div>