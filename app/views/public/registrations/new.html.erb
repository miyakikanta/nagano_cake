
 <div class="container">
  <div class="row">
   <div class="mx-auto">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %> 

 <label>名前</label>
<th>(姓)</th> <%= f.text_field :last_name,autoforcus: true,  placeholder: "(令和)" %>
<th>(姓)</th> <%= f.text_field :first_name,autofocus: true, placeholder: "(道子)" %></br>

<label>フリガナ</label>
<th>(セイ)</th> <%= f.text_field :last_name_kana,autofocus: true, placeholder: "(レイワ)" %>
<th>(メイ)</th> <%= f.text_field :first_name_kana,autofocus: true, placeholder: "(ミチコ)" %>

  <div class="field "> 
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
  </div>

    <%= f.label :郵便番号 %>
    <em>(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></br>

    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区◯◯町0-0" %></br>
    
    <%= f.label :電話番号 %>
    <em>(ハイフンなし)
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %>

 

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上) 
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード%>
    <em>(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "新規登録",class: 'btn btn-success' %>
  </div>
<% end %> 

<h3>既に登録済みの方</h3>

<%= render "public/shared/links"  %> 
 
  </div> 
 </div> 
</div>