 <div class="container">
  <div class="row">
   <div class=" mx-auto">

<h1>注文履歴一覧</h1>
 <table class="table">
<tr>
 <th>注文日</th>
 <th>配送先</th> 
 <th>注文商品</th>
 <th>支払金額</th>
 <th>注文詳細</th>
</tr>

<% @orders.each do |order| %><br/> 
 <tr>
 <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
 <th><%= order.postal_code %>
 <%= order.address %> 
 <%= order.name %></th>

<% order.order_details.each do |order_detail| %>
<th><%= order_detail.item.name %></th>
<% end %> 

 <th><%= order.total_payment.to_s(:delimited, delimiter: ',') %>円</th>
 
 <th><%= link_to'表示する', public_order_path(order.id), class: 'btn btn-primary'  %></th>
  
<% end %> 
 </tr>
  </table>
   </div>
  </div>
 </div>

