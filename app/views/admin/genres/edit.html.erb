<div class="container">
 <div class="row">
  <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>ジャンル編集</h2>
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul> 
<% end %>
<%= form_with model: @genre, url: admin_genre_path do |f| %>

  <h4>ジャンル</h4>
  <%= f.text_field :name %>
  
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
   
<% end %>

  </div>
 </div>
</div>