<div class="container">
 <div class="row">
  <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>ジャンル一覧、追加</h2>
<p></p> 
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre ,url: admin_genres_path do |f| %>

 <label for="name">ジャンル名</label>
 <%= f.text_field :name, placeholder: 'ケーキ' %> 
 
 <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %> 

<table class="table table-striped bg-light">
 <tr>
  <th>ジャンル</th>
  <th></th>
 </tr>
 
 <% @genres.each do |genre| %>
 <tr>
 <th><%= genre.name %></th>  
 <th><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></th><br/>
 </tr> 
 
 <% end %>
 </table>
     </div> 
  </div> 
</div>