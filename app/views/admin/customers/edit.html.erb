 <div class="container">
  <div class="row">
   <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2><%= @customer.full_name  %>さんの会員情報編集</h2>
 
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %> 
  </ul>
<% end %>

 <label for="id">会員ID</label>
 <%= @customer.id %> 

<%= form_with model: @customer, url: admin_customer_path do |f| %>

 <label>名前</label><br>
<th>(姓)</th><%= f.text_field :last_name,autoforcus: true,  placeholder: "令和" %>
<th>(姓)</th><%= f.text_field :first_name,autofocus: true, placeholder: "道子" %></br>

<label>カナ</label><br> 
<th>(セイ)</th><%= f.text_field :last_name_kana,autofocus: true, placeholder: "レイワ" %>
<th>(メイ)</th><%= f.text_field :first_name_kana,autofocus: true, placeholder: "ミチコ" %><br> 

  <div class="field"> 
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
  </div>

    <%= f.label :郵便番号 %>
    <em>(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></br>

    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区◯◯町0-0" %></br>
    
    <%= f.label :電話番号 %>
    <em>(ハイフンなし)
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %>

<h4>会員ステータス</h4>
      <%= f.radio_button :is_deleted, true %> 
      <%= f.label :is_deleted, '退会', value: true %>
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, '有効', value: false %><br/>



  <div class="actions">
    <%= f.submit "変更を保存"  %>
  </div>
<% end %>

  </div>
 </div>
</div>

 