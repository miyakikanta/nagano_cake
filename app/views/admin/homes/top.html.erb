 <div class="container">
  <div class="row">
   <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  
<h2>注文履歴一覧</h2>
<table class="table table-striped bg-light">
<tr>
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
</tr>

<% @orders.each do |order| %> 
<tr>
  <th><%=link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id) %></th>
  <th><%= order.customer.full_name %></th>
  <% sum = 0 %> 
  <% order.order_details.each do |order_detail| %>
  
  <% sum += order_detail.amount %>
      <% end %>
  <th><%= sum %>個</th>
<% end %>
</tr>
</table>

  </div>
 </div>
</div>