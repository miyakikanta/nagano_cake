<div class="container">
 <div class="row">
   <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>商品編集</h2>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li> 
    <% end %> 
  </ul>
<% end %>
<%= form_with model: @item, url: admin_item_path do |f| %>
 
 <h4>商品画像</h4>
<%= f.file_field :image %> 

<h4>商品名</h4>
<%= f.text_field :name,placeholder: '商品名' %>

<h4>商品説明</h4>
<%= f.text_area :introduction,placeholder: 'ここに説明文を記述します' %>

<h4>ジャンル</h4>
 <%= f.collection_select :genre_id, Genre.all,:id, :name,
    include_blank: '~選択してください~' %> 
 
<h4>税抜価格</h4>
<%= f.text_field :price,placeholder: '1000' %>円

<h4>販売ステータス</h4>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %><br/>
      
  <%= f.submit '変更を保存' ,class: 'btn btn-success'%>
   
<% end %>

   </div>
  </div>
 </div>