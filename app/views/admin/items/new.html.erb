<div class="container">
 <div class="row">
  <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    
<h2>商品新規登録</h2>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li> 
    <% end %>
  </ul>
<% end %>
<%= form_with model: @item, url: admin_items_path do |f| %> 
<div class="form-group">
 <label for="image">商品画像</label><br>
<%= f.file_field :image,accept: "image/*" %>  
</div>

<div class="form-group">
 <label for="name">商品名</label><br>
<%= f.text_field :name,placeholder: '商品名' %>
</div>

<div class="form-group">
  <label for="introduction">商品説明</label><br>
<%= f.text_area :introduction,placeholder: 'ここに説明文を記述します' %>
</div>

<div class="form-group">
  <label for="genre">ジャンル</label><br>
 <%= f.collection_select :genre_id, Genre.all,:id, :name,
    include_blank: '~選択してください~' %>
</div>

<div class="form-group">
  <label for="price">税抜価格</label><br>
<%= f.text_field :price,placeholder: '1,000' %>円
</div>

<div class="form-group">
  <label for="is_active">販売ステータス</label><br>
      <%= f.radio_button :is_active, true %> 
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %><br/>
</div>

 <%= f.submit '新規登録',class: 'btn btn-success' %>
<% end %>
   </div> 
  </div>
 </div>